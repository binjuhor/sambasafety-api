{
  "name": "binjuhor/sambasafety-api",
  "description": "PHP SDK for SambaSafety Driver Risk Management API",
  "type": "library",
  "keywords": [
    "sambasafety",
    "driver",
    "risk",
    "management",
    "mvr",
    "api",
    "sdk",
    "fleet",
    "safety"
  ],
  "require": {
    "guzzlehttp/guzzle": "^7.0",
    "php": "^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0",
    "symfony/var-dumper": "5.0|^6.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Binjuhor\\SambasafetyApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Binjuhor\\SambasafetyApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse src --level=8",
    "cs-check": "phpcs src tests --standard=PSR12",
    "cs-fix": "phpcbf src tests --standard=PSR12"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Hoang Kiem",
      "email": "kiemhd@outlook.com",
      "homepage": "https://binjuhor.com"
    }
  ]
}
